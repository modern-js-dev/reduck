{
  "private": true,
  "name": "monorepo",
  "scripts": {
    "new": "modern new",
    "setup": "npm run reset && pnpm install",
    "reset": "lerna clean --yes && rm -rf node_modules",
    "lint": "modern lint",
    "change": "modern change",
    "bump": "modern bump",
    "pre": "modern pre",
    "release": "modern release"
  },
  "engines": {
    "node": ">=12.13.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "pnpm exec eslint --fix --color --cache --quiet",
      "git add"
    ],
    "*.{js,jsx,mjs,mjsx,cjs,cjsx}": [
      "pnpm exec eslint --fix --color --cache --quiet",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@modern-js"
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    "dist/",
    "lib/",
    ".rpt2_cache/"
  ],
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/**/*"
    ]
  },
  "devDependencies": {
    "@modern-js/monorepo-tools": "^1.0.0-rc.1",
    "@modern-js/plugin-jarvis": "^1.0.0-rc.1",
    "@modern-js/tsconfig": "^1.0.0-rc.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@commitlint/cli": "^13.2.0",
    "webpack": "^5.54.0"
  }
}
